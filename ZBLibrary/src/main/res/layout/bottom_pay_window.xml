<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/vBaseBottomWindowRoot"
    style="@style/bottom_window_page"
    android:paddingTop="240dp"
    tools:ignore="MissingDefaultResource">

    <zuo.biao.library.ui.MaxHeightWrapLayout
        style="@style/ll_vertical_match_wrap"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bottom_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textColor="#E4393C"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bottom_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/bottom_pay_price"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/bottom_time"
                android:textColor="#666666"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bottom_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining points: "
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/bottom_pay_remind_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#E4393C"
                    android:textSize="12dp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/ivBaseClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/login_close" />

        </RelativeLayout>

        <Button
            android:id="@+id/tvBottomMenuCancel"
            style="@style/text_middle"
            android:onClick="onReturnClick"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/bottom_menu_cancel_bg"
            android:text="@string/bottom_pay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />
    </zuo.biao.library.ui.MaxHeightWrapLayout>

</LinearLayout>