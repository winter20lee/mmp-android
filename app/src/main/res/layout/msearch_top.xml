<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:id="@+id/search_root"
    >

    <EditText
        android:id="@+id/et_searchtext_search"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="14dp"
        android:layout_centerVertical="true"
        android:background="@drawable/search_baground_shap"
        android:gravity="center_vertical|left"
        android:imeOptions="actionSearch"
        android:layout_marginRight="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="160dp"
        android:singleLine="true"
        android:hint="请输入关键字"
        android:textColor="#666666"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/explore_search_icon" />

    <ImageView
        android:id="@+id/button_history"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:src="@mipmap/home_history" />

    <TextView
        android:id="@+id/button_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:text="取消"
        android:textColor="#323038"
        android:textSize="13sp"
        android:visibility="gone"
        />

</RelativeLayout>

