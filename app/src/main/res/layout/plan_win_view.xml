<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap">

    <RelativeLayout
        style="@style/match_wrap"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_8_shap"
        >

        <ImageView
            android:id="@+id/iv_plan_win_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/oval_alpha" />


        <TextView
            android:id="@+id/tv_plan_win_planuser"
            android:layout_toRightOf="@id/iv_plan_win_head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_win_id"
            android:layout_toRightOf="@id/tv_plan_win_planuser"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_win_planno_title"
            android:layout_toRightOf="@id/iv_plan_win_head"
            android:layout_below="@id/tv_plan_win_planuser"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="10dp"
            android:text="@string/plan_win_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_win_planno"
            android:layout_toRightOf="@id/tv_plan_win_planno_title"
            android:layout_below="@id/tv_plan_win_planuser"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_win_luckno_title"
            android:layout_toRightOf="@id/iv_plan_win_head"
            android:layout_below="@id/tv_plan_win_planno_title"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="10dp"
            android:text="@string/plan_win_luck_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_win_luckno"
            android:layout_toRightOf="@id/tv_plan_win_luckno_title"
            android:layout_below="@id/tv_plan_win_planno_title"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#E2291F"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_plan_win_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#999999"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>
