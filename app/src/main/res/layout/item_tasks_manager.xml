<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/task_select_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:paddingRight="12dp"
            android:src="@mipmap/shopping_car_unselect"
            />

        <ImageView
            android:layout_width="93dp"
            android:layout_height="60dp"
            android:src="@color/alpha_1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="task: asdfslkdjflsjfo"
                android:textColor="#323038"
                android:textSize="13sp" />

            <ProgressBar
                android:id="@+id/task_pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/task_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="status: connected"
                    android:textColor="#87869E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/task_total_tv"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0M"
                    android:textColor="#87869E"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/task_action_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="38dp"
        android:text="Start"
        android:visibility="visible"
        android:background="#00000000"
        android:textColor="#00000000"
        android:textSize="14sp" />
</FrameLayout>
