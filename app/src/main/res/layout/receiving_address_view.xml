<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_horizontal_match_wrap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_4_shap"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/rece_add_def"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radius_4_black_shap"
            android:gravity="center"
            android:text="@string/add_address_def"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rece_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rece_add_def"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#666666"
            android:textSize="12sp"
            tools:text="Manchester, Kentucky" />

        <TextView
            android:id="@+id/rece_add_address_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rece_add_address"
            android:layout_marginTop="12dp"
            android:textColor="#333333"
            android:layout_marginRight="40dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            tools:text="4517 Washington Ave." />

        <TextView
            android:id="@+id/rece_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rece_add_address_des"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="78dp"
            tools:text="Arlene McCoy" />

        <TextView
            android:id="@+id/rece_add_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rece_add_address_des"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rece_add_name"
            android:textColor="#666666"
            android:textSize="12sp"
            android:maxWidth="92dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="(603) 555-0123" />

        <ImageView
            android:id="@+id/rece_add_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/address_edit" />
    </RelativeLayout>

</RelativeLayout>