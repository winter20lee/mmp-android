<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_horizontal_match_match"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        >
        <ImageView
            android:id="@+id/shopping_cart_item_select"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:paddingRight="12dp"
            android:src="@mipmap/shopping_car_unselect"
            />
        <ImageView
            android:id="@+id/shopping_cart_item_pic"
            style="@style/img_fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/rect_alpha" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/shopping_cart_item_title"
                android:textColor="#333333"
                android:textSize="12dp"
                android:maxLines="2"
                android:text=""
                android:lines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <LinearLayout
                android:id="@+id/shopping_cart_item_spec"
                android:layout_width="wrap_content"
                android:layout_below="@id/shopping_cart_item_title"
                android:layout_marginTop="9dp"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:background="@drawable/radius_9_gray_shap"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shopping_cart_item_canshu"
                    android:textColor="#666666"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/shopping_car_down"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/shopping_cart_item_num"
                android:textSize="10dp"
                android:maxLines="1"
                android:lines="1"
                android:layout_marginTop="7dp"
                android:layout_below="@id/shopping_cart_item_spec"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/shopping_cart_item_price"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textColor="#E4393C"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/shopping_cart_item_del"
        android:layout_width="104dp"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent"
        android:background="@drawable/radius_left_8_red_shap"
        android:text="@string/shopping_car_del"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        />

</LinearLayout>