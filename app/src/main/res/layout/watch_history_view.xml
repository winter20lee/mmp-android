<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    >

        <ImageView
            android:id="@+id/watch_history_img"
            android:layout_width="93dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/alpha_1"
            />

        <TextView
            android:id="@+id/watch_history_name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/watch_history_img"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#323038"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/watch_history_label"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/watch_history_img"
            android:layout_below="@id/watch_history_name"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#87869E"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/watch_history_time"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#95949D"
            android:layout_below="@id/watch_history_label"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>