<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:paddingTop="15dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/radius_4_gray_shap" >
        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginLeft="10dp"
            android:text="订单编号：83482982498928498"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_copy"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#8376E5"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="复制"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/order_state"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:textColor="#67C23A"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="付款成功"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_card"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/order_card"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="充值VIP"
            android:textColor="#282828"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/order_time"
            android:layout_below="@id/order_name"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:textColor="#95949D"
            android:layout_toRightOf="@id/order_card"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_price"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#282828"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_price"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/radius_4_line_shap"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="联系客服"
            android:textColor="#999999"
            android:textSize="12dp" />

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"
        android:layout_marginTop="20dp"
        />

</LinearLayout>