<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page"
    android:background="@color/white"
    >

    <RelativeLayout style="@style/topbar_bg" >

        <ImageView style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:text="绑定手机号" />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_46_gray_f6f6f6_shap"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#282828"
                    android:textColorHint="#CCCCCC"
                    android:textSize="13dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_46_gray_f6f6f6_shap"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="#282828"
                    android:textColorHint="#CCCCCC"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/login_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="获取验证码"
                    android:textColor="#8376E5"
                    android:textSize="13dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/login_login"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_width="140dp"
                android:layout_height="44dp"
                android:textSize="13sp"
                android:background="@drawable/radius_20_yellow_shap"
                android:textColor="#282828"
                android:text="绑定"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/login_tologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号，直接登录"
                android:textColor="#8376E5"
                android:textSize="12sp"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>

</LinearLayout>