<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_page">

    <RelativeLayout style="@style/topbar_bg" >

        <ImageView style="@style/topbar_return_img" />

        <HorizontalScrollView
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:id="@+id/loot_details_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loot_details_banner_top"
                        android:layout_width="wrap_content"
                        android:text="@string/loot_details_top"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/loot_des_top_tab_selector"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/loot_details_banner_top_"
                        android:layout_width="32dp"
                        android:layout_height="3dp"
                        android:background="@drawable/loot_des_top_tab_shap"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loot_details_banner_bqcy"
                        android:layout_width="wrap_content"
                        android:text="@string/loot_details_bqcy"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/loot_des_top_tab_selector"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/loot_details_banner_bqcy_"
                        android:layout_width="64dp"
                        android:layout_height="3dp"
                        android:background="@drawable/loot_des_top_tab_shap"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loot_details_banner_wqjx"
                        android:layout_width="wrap_content"
                        android:text="@string/plan_win_title"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/loot_des_top_tab_selector"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/loot_details_banner_wqjx_"
                        android:layout_width="64dp"
                        android:layout_height="3dp"
                        android:background="@drawable/loot_des_top_tab_shap"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loot_details_banner_spxq"
                        android:layout_width="wrap_content"
                        android:text="@string/product_details_title"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/loot_des_top_tab_selector"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/loot_details_banner_spxq_"
                        android:layout_width="64dp"
                        android:layout_height="3dp"
                        android:background="@drawable/loot_des_top_tab_shap"
                        />

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/kefu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_kefu"
            />
    </RelativeLayout>

    <zuo.biao.library.ui.MyScrollView
        android:id="@+id/loot_details_sv"
        style="@style/match_match"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="@dimen/topbar_height"
        >
        <LinearLayout style="@style/ll_vertical_match_match"
