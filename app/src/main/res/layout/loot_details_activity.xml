                    app:relativeRatio="1"
                    android:layout_height="wrap_content">

                    <com.zhouwei.mzbanner.MZBannerView
                        android:id="@+id/product_details_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:canLoop="true"
                        app:indicatorAlign="center"
                        app:indicatorPaddingLeft="10dp"
                        app:open_mz_mode="false" />
                </zuo.biao.library.ui.RatioRelativeLayout>
                <!--商品名称-->
                <FrameLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/product_details_name"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        tools:text="iphone 13/白色/黑色/银色/512GB/原装正品/国行 手机/双卡双待-限时特惠"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/product_details_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/radius_4_black_shap"
                        />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E4393C"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="12dp"
                    tools:text="$10.00" />

                <TextView
                    android:id="@+id/tv_loot_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:layout_marginBottom="20dp"
                    tools:text="80%" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/radius_4_shap"
                android:layout_marginTop="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Specifications:"
                    />
                <TextView
                    android:id="@+id/tv_good_spe"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/tv_real_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="18dp"
                    tools:text="$17.999.00" />
            </LinearLayout>

            <!--我得参与-->
