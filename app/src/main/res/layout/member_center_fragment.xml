<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_vertical_match_match">
    <include layout="@layout/statebar_view"/>
    <RelativeLayout style="@style/topbar_bg" >
        <TextView
            style="@style/topbar_title"
            android:text="会员中心" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#40323038"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:text="订单"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#323038"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

<!--        <ScrollView-->
<!--            style="@style/ll_vertical_match_match"-->
<!--            android:layout_weight="1" >-->
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                style="@style/ll_vertical_match_match" >

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/member_canter_head"
                        android:layout_width="32dp"
                        android:layout_marginLeft="15dp"
                        android:src="@color/alpha_1"
                        android:layout_height="32dp"/>

                    <TextView
                        android:id="@+id/member_canter_name"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/member_canter_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#87869E"
                        android:textSize="12sp"
                        android:layout_marginRight="15dp"
                        android:text="（未绑定手机号）"
                        />
                </LinearLayout>

                <Gallery
                    android:id="@+id/member_center_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            <ImageView
                android:id="@+id/member_center_equity"
                android:layout_width="match_parent"
                android:background="@color/alpha_1"
                android:layout_height="100dp"/>

                <ImageView
                    android:id="@+id/member_center_ad"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/alpha_1"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:paddingBottom="20dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="86dp"
                        android:background="@drawable/radius_left_20_blue_shap"
                        android:gravity="center_vertical"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/kefu"
                            android:layout_marginLeft="18dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="客服"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/radius_right_20_black_shap"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="合计："
                            android:layout_marginLeft="20dp"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/member_canter_price"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="¥ 100.00"
                            android:layout_marginLeft="10dp"
                            android:textColor="#FF3462"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/radius_20_red_shap"
                            android:text="立即支付"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
<!--        </ScrollView>-->
</LinearLayout>
