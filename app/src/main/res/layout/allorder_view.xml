<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_wrap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_4_shap"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/myorder_numcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="Period No.: 0068977" />

        <TextView
            android:id="@+id/myorder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myorder_numcode"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="12dp"
            tools:text="Creation time: 2020-11-11 11:11:00" />

        <TextView
            android:id="@+id/myorder_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myorder_time"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="12dp"
            tools:text="Order No. : 2212421244" />


        <TextView
            android:id="@+id/myorder_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:textColor="#E2291F"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="To Pay" />

        <LinearLayout
            android:id="@+id/myorder_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myorder_code"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <ImageView
            android:id="@+id/myorder_win"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/win_icon"
            android:visibility="gone" />
        
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#e9e9e9"
            android:layout_below="@id/myorder_content"
            />

        <TextView
            android:id="@+id/allorder_price_totle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Value"
            android:textColor="#666666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/allorder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/allorder_price_totle"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14dp"
            tools:text="$ 16,999.00" />

        <TextView
            android:id="@+id/allorder_untprice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_price"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Price"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/allorder_untprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_price"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/allorder_untprice_title"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="$ 10.00 " />

        <TextView
            android:id="@+id/allorder_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_price"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/allorder_untprice"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text=" * "
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/allorder_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_price"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/allorder_start"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="10" />

        <TextView
            android:id="@+id/myorder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_price"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#E4393C"
            android:textSize="16sp"
            tools:text="$30,000,00" />

        <TextView
            android:id="@+id/myorder_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_num"
            android:layout_marginTop="10dp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="The order will automatically close after 1:30 min." />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myorder_result"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/myorder_des"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/radius_17_gray_line_shap"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/allorder_ckjl"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/myorder_pay"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/radius_17_red_line_shap"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/myorder_ljfk"
                android:textColor="#E4393C"
                android:textSize="12sp" />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>