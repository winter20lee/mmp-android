<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sort_root"
    android:layout_width="match_parent"
    android:background="#aa000000"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F4F4F4"
        />

    <RelativeLayout
        android:id="@+id/sort_rl"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/sort_ll"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#E2291F"
                android:text="@string/class_sear_rqsp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/sort_iv"
                android:layout_toRightOf="@id/sort_title"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/sort_up_title"
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/sort_iv"
                android:background="#33E2291F" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sort_filter"
            android:orientation="horizontal"
            android:layout_marginRight="9dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#5F5F5F"
                android:text="Filter"
                />
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/sort_filter"
                android:layout_width="12dp"
                android:layout_height="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sort_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <!--人气-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/sort_rqsp_up"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_rqsp_tv_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_rqsp"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_rqsp_iv_up"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_up_selector" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sort_rqsp_down"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_ll"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_rqsp_tv_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_rqsp"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_rqsp_iv_down"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_down_selector" />
                </LinearLayout>
            </LinearLayout>

            <!--即将满员-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/sort_jjmy_up"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_rqsp_down"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_jjmy_tv_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_jjmy"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_jjmy_iv_up"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_up_selector" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sort_jjmy_down"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_rqsp_down"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_jjmy_tv_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_jjmy"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_jjmy_iv_down"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_down_selector" />
                </LinearLayout>
            </LinearLayout>

            <!--最新上架-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/sort_zjsj_up"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_jjmy_down"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_zjsj_tv_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_zxsj"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_zjsj_iv_up"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_up_selector" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sort_zjsj_down"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_jjmy_down"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_zjsj_tv_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_zxsj"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_zjsj_iv_down"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_down_selector" />
                </LinearLayout>
            </LinearLayout>

            <!--总需人数-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/sort_zxrs_up"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_zjsj_down"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_zxrs_tv_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_zxrs"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_zxrs_iv_up"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_up_selector" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sort_zxrs_down"
                    android:layout_width="136dp"
                    android:layout_height="26dp"
                    android:layout_below="@id/sort_zjsj_down"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sort_item_selector"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sort_zxrs_tv_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_sear_zxrs"
                        android:textColor="@color/sort_text_selector"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/sort_zxrs_iv_down"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sort_iv_down_selector" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>