<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_horizontal_match_wrap">
    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        >
        <ImageView
            android:id="@+id/loot_submit_order_item_pic"
            style="@style/img_fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/rect_alpha" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/loot_submit_order_item_title"
                android:textColor="#333333"
                android:textSize="12dp"
                android:maxLines="1"
                android:text=""
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <RelativeLayout
                android:id="@+id/loot_submit_order_item_spec"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/loot_submit_order_item_canshu"
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/loot_submit_order_item_num"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/loot_submit_order_item_canshu"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="14dp"
                android:layout_height="match_parent">
                
                <TextView
                    android:id="@+id/loot_submit_order_item_price_"
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/loot_submit_order_item_sale"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/loot_submit_order_item_price_"
                    android:textSize="10dp"
                    android:textColor="#666666"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/loot_submit_order_item_price"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textColor="#E4393C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>