<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/first_category_title_icon"
            android:layout_centerVertical="true"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/title_icon"
            />

        <TextView
            android:id="@+id/first_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/first_category_title_icon"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/first_category_more"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:textColor="#FF87869E"
                android:textSize="12dp"
                />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/first_more" />
        </LinearLayout>
    </RelativeLayout>
    <zuo.biao.library.ui.ExpandableGridView
        android:id="@+id/first_gridview"
        android:numColumns="2"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/first_category_bottom"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/first_bottom_change"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="12.5dp"
            android:background="@drawable/radius_4_gray_shap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/first_bottom_change"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换一换"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:textColor="#282828"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/first_bottom_more"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radius_4_gray_shap"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12.5dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/first_bottom_more"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多片源"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:textColor="#282828"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>