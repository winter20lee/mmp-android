<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_page"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout style="@style/topbar_bg" >

        <ImageView style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:text="Submit order" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/submit_order_defult_address"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_8_shap"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@mipmap/empty_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_address_add_toast"
            android:textColor="#999999"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="20dp"
            />
    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius_8_shap"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_height="wrap_content">
                <include layout="@layout/base_recycler_fragment"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/radius_8_shap"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:text="Postage"
                    />

                <TextView
                    android:id="@+id/submit_order_postage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E2291F"
                    android:layout_gravity="center_vertical|right"
                    android:textSize="12dp"
                    android:text=""
                    />
            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/submit_order_totle"
            android:textColor="#333333"
            android:textSize="10dp"
            android:paddingTop="4dp"
            android:gravity="right|bottom"
            android:background="#ffffff"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/submit_order_pieces"
            android:textColor="#666666"
            android:textSize="10dp"
            android:paddingTop="6dp"
            android:gravity="right|bottom"
            android:background="#ffffff"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/submit_order_submit"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Submit order"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/submit_order_button_shap"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>