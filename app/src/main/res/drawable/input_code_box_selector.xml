<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list >
            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <stroke
                        android:width="1dp"
                        android:color="#CCCCCC" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list >
            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <stroke
                        android:width="1dp"
                        android:color="#F2F2F2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>